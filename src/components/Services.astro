---
import { SERVICES } from '../data/services.js';
---

<div class="max-w-7xl mx-auto text-center">
  <div class="flex flex-col md:flex-row justify-center gap-8">
    {SERVICES.map(service => (
      <div class="bg-black shadow-lg rounded-lg p-6 w-full md:w-1/3 transform transition-transform hover:scale-105">
        <h3 class="text-2xl font-semibold text-white mb-4">{service.title}</h3>
        <p class="text-gray-300 mb-6">
          {service.description}
          <ul class="list-disc list-inside text-left mt-2 mb-4">
            {service.features.map(feature => (
              <li>{feature}</li>
            ))}
          </ul>
        </p>
        <p class="text-white text-3xl font-bold mb-4">{service.price}</p>
        <a href={service.link} target="_blank" rel="noopener noreferrer">
          <button class="w-full bg-white text-black font-bold py-2 rounded hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2">
            {service.buttonText}
          </button>
        </a>
      </div>
    ))}
  </div>
</div>